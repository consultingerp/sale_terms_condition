<?xml version="1.0" encoding="utf-8"?>
<odoo>
<record id="view_order_form" model="ir.ui.view">
    <field name="name">sale.view.order.form</field>
    <field name="model">sale.order</field>
    <field name="inherit_id" ref="sale.view_order_form"/>
    <field name="arch" type="xml">
        <xpath expr="//div[@class='oe_clear']" position="after">
            <h2><label for="note" string="Terms and Conditions"/></h2>
            <field name="note" placeholder="Terms and conditions... (note: you can setup default ones in the Configuration menu)"/>
        </xpath>
    </field>
</record>
</odoo>
